<div class="container">

  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Gudi
        <small>Secondary Text</small>
      </h1>
    </div>
  </div>
  <!-- /.row -->
  <%unless  @profiles.empty?%>
      <% @profiles.each do |profile| %>
          <!-- Project One -->
          <div class="row">
            <div class="col-md-7">


                <%= link_to image_tag profile.image.url(:medium), alt: profile.image.url(:medium), class: "img-responsive" %>

            </div>
            <div class="col-md-5">
              <h3><%= profile.title.titleize %></h3>
              <h4><%= profile.at_place %></h4>

              <p><%= truncate(raw(profile.about_temple), length: 100, separator: ' ',escape: false) %></p>



                <%= link_to "View Temple", profiles_path(profile) ,class: "btn btn-small btn-primary", style: "color:inherit",role: "button" %>

            </div>
            <!-- /.row -->
            <hr>
      <% end%>
  <%end%>

  </div>

</div>
